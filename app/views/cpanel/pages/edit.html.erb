<%= render :partial => 'submenu' %>
<div id="pages" class="form">
<%= form_for @page,:url => (@page.id ? cpanel_page_url(@page) : cpanel_pages_url) do |f| %>
    <%= render "shared/error_messages", :target => @page %>
<table border="0" cellspacing="0" cellpadding="0">
	<tr class="row">
		<td class="field">Title</td>
		<td><%= f.text_field :title, :class => 'text' %></td>
	</tr>
	<tr class="row">
		<td class="field">Slug</td>
		<td><%= f.text_field :slug, :class => 'text' %></td>
	</tr>
	<tr class="row">
		<td class="field" valign="top">Page content</td>
		<td>
		<%= f.text_area :body, :class => 'text long' %><br />
		<p class="tip_p">
			Used here Markdown Format, Read <%= link_to "This document", "http://daringfireball.net/projects/markdown/" %></a>.
		</p>
		</td>
	</tr>
	<tr class="row">
		<td class="field">Status</td>
		<td><%= select("page","status",Post::STATUS,{:selected => @page.status}) %></td>
	</tr>
	<tr class="buttons">
		<td class="field"></td>
		<td>
      <%= f.submit "Save", :class => "button submit" %> or <%= link_to 'Back', cpanel_pages_path %>
		</td>
	</tr>
</table>
<% end %>
</div>

