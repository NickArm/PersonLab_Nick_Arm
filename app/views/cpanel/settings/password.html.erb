<%= render :partial => 'submenu' %>
<div class="form">
  <%= form_for(@current_user,:url => "") do |f| %>
    <%= success_messages %>
    <%= render "shared/error_messages", :target => @current_user %>
    <table border="0" cellspacing="0" cellpadding="0">
		<tr class="row">
          <td class="field">Old Password</td>
          <td><%= password_field_tag :old_pwd, params[:old_pwd], :class => "text middle" %></td>
        </tr>
        <tr class="row">
          <td class="field">New password</td>
          <td><%= password_field_tag :new_pwd, params[:new_pwd], :class => "text middle" %></td>
        </tr>
        <tr class="row">
          <td class="field">Confirm new password</td>
          <td><%= password_field_tag :confirm_pwd, params[:confirm_pwd], :class => "text middle" %></td>
        </tr>
        <tr class="row">
          <td class="field"></td>
          <td><%= f.submit("Change Password")  %> </td>
        </tr>
     </table>
  <% end %>
</div>
